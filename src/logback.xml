	<!--Date-based file appender -->
	<!-- Insert the current time formatted as "yyyyMMdd'T'HHmmss" under
       the key "bySecond" into the logger context. This value will be
       available to all subsequent configuration elements. -->
  <timestamp key="bySecond" datePattern="yyyy-MM-dd-HH-mm-ss"/>

  <appender name="TIMESTAMPFILE" class="ch.qos.logback.core.FileAppender">
    <!-- use the previously created timestamp to create a uniquely named log file -->
    <file>logs/gSpork-${bySecond}.log</file>
    <encoder>
      <pattern>%d %-5level %class - %msg%n</pattern>
    </encoder>
  </appender>


